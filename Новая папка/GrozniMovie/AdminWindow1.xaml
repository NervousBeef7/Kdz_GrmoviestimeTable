<Window x:Class="Movies_Timetabel.AdminWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movies_Timetabel"
        mc:Ignorable="d"
        Title="Администрирование" ResizeMode="NoResize" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/1.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontStyle="Italic" Foreground="Black" FontFamily="Times New Roman" Margin="15,14,192,14" Width="312">
            Фильмы
        </TextBlock>

        <Frame x:Name="adminFrame" Grid.Row="1" Height="200" Width="450" NavigationUIVisibility="Hidden"/>

        <Button x:Name="goMainButton" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="130" Height="30" Click="goMainButton_Click" FontSize="16" Foreground="White" Background="Black" Margin="14,5,375,5">
            На главную
        </Button>

    </Grid>
</Window>
